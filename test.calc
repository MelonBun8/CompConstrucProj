// --- 1. Basic Arithmetic & Precedence ---
print(111111); // Section Marker
a = 10;
b = 20;
c = (a + b) * 2;     // (10+20)*2 = 60
d = c / 5 - 2;       // 60/5 - 2 = 10
e = 2 ^ 3 + 1;       // 8 + 1 = 9
print(c);
print(d);
print(e);

// --- 2. Floating Point Math ---
print(222222);
f = 3.14;
g = 2.0;
area = f * g ^ 2;    // 3.14 * 4 = 12.56
print(area);

// --- 3. Relational & Equality Logic ---
// 1 means True, 0 means False
print(333333);
is_greater = 10 > 5;
is_equal = (5 + 5) == 10;
not_equal = 10 != 20;
print(is_greater); // 1
print(is_equal);   // 1
print(not_equal);  // 1

// --- 4. Control Flow: If / Else ---
print(444444);
score = 85;
if (score >= 90) {
    print(1); // Grade A (False)
} else {
    if (score >= 80) {
        print(2); // Grade B (True)
    } else {
        print(3); // Grade C (False)
    }
}

// --- 5. Control Flow: While Loop ---
print(555555);
counter = 5;
factorial = 1;
while (counter > 0) {
    factorial = factorial * counter;
    counter = counter - 1;
}
print(factorial); // 5! = 120

